{
  "productName": "FixMate AI",
  "version": "1.0.0",
  "identifier": "com.fixmate.pcdoctor",
  "build": {
    "beforeDevCommand": "pnpm dev:frontend",
    "beforeBuildCommand": "pnpm build:frontend",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../client/dist"
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/icon.png"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": ["en-US"]
      },
      "nsis": {
        "installMode": "perUser",
        "languages": ["English"],
        "compression": "lzma"
      }
    },
    "publisher": "FixMate AI",
    "homepage": "https://github.com/pronelclickbank-lgtm/fixmate-ai"
  },
  "app": {
    "windows": [
      {
        "title": "FixMate AI - PC Doctor",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true,
        "minWidth": 1200,
        "minHeight": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/pronelclickbank-lgtm/fixmate-ai/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDA0NEUxOEEyQ0MyODkxMDEKUldRQmtTak1vaGhPQkVMVlRTZkNyMEZhdXFMTFV2QUU1blpuUVVxM3JVaVdNeEdvM1N4eExmckcK"
    }
  }
}
